{
  "colors": {
    "--color-primary": "#00c853",
    "--color-primary-hover": "#00b248",
    "--color-accent": "#007e33",
    "--color-accent-hover": "#00682b",
    "--color-neutral-100": "#ffffff",
    "--color-neutral-200": "#f4f4f4",
    "--color-neutral-300": "#e0e0e0",
    "--color-neutral-600": "#757575",
    "--color-neutral-700": "#424242",
    "--color-neutral-800": "#212121",
    "--color-neutral-900": "#111111",
    "--color-success": "#00c853",
    "--color-warning": "#ffb300",
    "--color-error": "#d32f2f",
    "--color-background-light": "#f5f5f5",
    "--color-background-dark": "#1b1b1b",
    "--color-gradient-primary": "linear-gradient(135deg, #00c853 0%, #007e33 100%)"
  },
  "typography": {
    "--font-family-base": "'Open Sans', sans-serif",
    "--font-family-heading": "'Montserrat', sans-serif",
    "--font-weight-regular": "400",
    "--font-weight-semibold": "600",
    "--font-weight-bold": "700",
    "--font-size-xs": "0.75rem",
    "--font-size-sm": "0.875rem",
    "--font-size-md": "1rem",
    "--font-size-lg": "1.125rem",
    "--font-size-xl": "1.5rem",
    "--font-size-2xl": "2rem",
    "--font-size-3xl": "3rem",
    "--line-height-base": "1.6",
    "--line-height-heading": "1.2"
  },
  "spacing": {
    "--space-xs": "0.25rem",
    "--space-sm": "0.5rem",
    "--space-md": "1rem",
    "--space-lg": "1.5rem",
    "--space-xl": "2rem",
    "--space-2xl": "3rem",
    "--space-3xl": "4rem"
  },
  "breakpoints": {
    "--breakpoint-sm": "640px",
    "--breakpoint-md": "768px",
    "--breakpoint-lg": "1024px",
    "--breakpoint-xl": "1280px"
  },
  "buttons": {
    "primary": {
      "background": "var(--color-primary)",
      "color": "var(--color-neutral-100)",
      "padding": "var(--space-md) var(--space-lg)",
      "borderRadius": "0.375rem",
      "hover": {
        "background": "var(--color-primary-hover)"
      },
      "focus": {
        "outline": "2px solid var(--color-accent)",
        "outlineOffset": "2px"
      }
    },
    "secondary": {
      "background": "transparent",
      "color": "var(--color-primary)",
      "border": "2px solid var(--color-primary)",
      "padding": "var(--space-md) var(--space-lg)",
      "borderRadius": "0.375rem",
      "hover": {
        "background": "rgba(0, 200, 83, 0.1)",
        "color": "var(--color-primary-hover)"
      },
      "focus": {
        "outline": "2px solid var(--color-accent)"
      }
    }
  },
  "inputs": {
    "default": {
      "background": "var(--color-neutral-200)",
      "color": "var(--color-neutral-900)",
      "padding": "var(--space-sm) var(--space-md)",
      "border": "1px solid var(--color-neutral-300)",
      "borderRadius": "0.375rem",
      "focus": {
        "borderColor": "var(--color-primary)",
        "boxShadow": "0 0 0 3px rgba(0, 200, 83, 0.25)"
      },
      "placeholderColor": "var(--color-neutral-600)"
    },
    "error": {
      "borderColor": "var(--color-error)",
      "background": "rgba(211, 47, 47, 0.1)"
    }
  },
  "animations": {
    "--duration-fast": "150ms",
    "--duration-medium": "300ms",
    "--duration-slow": "600ms",
    "--easing-standard": "cubic-bezier(0.4, 0.0, 0.2, 1)",
    "keyframes": {
      "fadeIn": {
        "from": { "opacity": "0" },
        "to": { "opacity": "1" }
      },
      "slideUp": {
        "from": { "transform": "translateY(40px)", "opacity": "0" },
        "to": { "transform": "translateY(0)", "opacity": "1" }
      },
      "zoomIn": {
        "from": { "transform": "scale(0.9)", "opacity": "0" },
        "to": { "transform": "scale(1)", "opacity": "1" }
      }
    }
  },
  "components": {
    "hero": {
      "background": "var(--color-background-dark)",
      "color": "var(--color-neutral-100)",
      "padding": "var(--space-3xl) var(--space-xl)",
      "heading": {
        "fontFamily": "var(--font-family-heading)",
        "fontSize": "var(--font-size-3xl)",
        "fontWeight": "700",
        "marginBottom": "var(--space-md)"
      },
      "subheading": {
        "fontSize": "var(--font-size-lg)",
        "color": "var(--color-neutral-300)",
        "marginBottom": "var(--space-lg)"
      },
      "buttonStyle": "primary"
    },
    "card": {
      "background": "var(--color-neutral-100)",
      "border": "1px solid var(--color-neutral-300)",
      "borderRadius": "0.5rem",
      "padding": "var(--space-lg)",
      "shadow": "0 4px 12px rgba(0,0,0,0.08)",
      "heading": {
        "fontSize": "var(--font-size-xl)",
        "color": "var(--color-neutral-900)"
      },
      "body": {
        "fontSize": "var(--font-size-md)",
        "color": "var(--color-neutral-700)"
      }
    },
    "nav": {
      "background": "var(--color-background-dark)",
      "link": {
        "fontSize": "var(--font-size-md)",
        "color": "var(--color-neutral-100)",
        "hoverColor": "var(--color-primary)"
      },
      "brand": {
        "fontSize": "var(--font-size-xl)",
        "color": "var(--color-primary)",
        "fontWeight": "700"
      }
    }
  },
  "accessibility": {
    "contrastRatios": {
      "primaryOnDark": "7.2:1",
      "neutralOnDark": "4.8:1",
      "darkOnLight": "10.5:1"
    },
    "notes": [
      "All text over dark backgrounds must have at least AA (4.5:1) contrast.",
      "Maintain focus indicators for all interactive elements."
    ]
  },
  "buildNotes": {
    "cssVariableConvention": "Use the variable names exactly as defined here (var(--color-primary), etc.)",
    "tailwindIntegration": "Extend Tailwind config using these tokens for colors, spacing, and fonts.",
    "sampleHtmlCss": "<button class='btn-primary'>Get Started</button>\n<style>\n.btn-primary {\n background: var(--color-primary);\n color: var(--color-neutral-100);\n padding: var(--space-md) var(--space-lg);\n border-radius: 0.375rem;\n transition: background var(--duration-medium) var(--easing-standard);\n}\n.btn-primary:hover {\n background: var(--color-primary-hover);\n}\n</style>"
  }
}
